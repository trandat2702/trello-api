{
   "watch": ["src/routes/**/*", "src/controllers/**/*"],
  "ignore": ["src/config/**/*", "src/models/**/*"],
  "ext": "js,json,env",
  "exec": "babel-node ./src/server.js",
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "trello:*"
  },
  "legacyWatch": true,
  "polling": false,
  "delay": 200,
  "verbose": false,
  "restartable": "rs",
  "events": {
    "restart": "echo 'ðŸ”„ [Trello API] Quick restart...'",
    "start": "echo 'ðŸš€ [Trello API] Starting...'",
    "crash": "echo 'ðŸ’¥ [Trello API] Crashed - waiting...'"
  },
  "colours": true,
